{
  "name": "food-ordering-backend",
  "version": "1.0.0",
  "description": "Backend API for food ordering system",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node server.js",
    "start:dev": "nodemon --exec ts-node src/index.ts",
    "migrate": "ts-node src/database/migrate.ts",
    "add-order-fields": "ts-node src/database/add-order-fields.ts",
